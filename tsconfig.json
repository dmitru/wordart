{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "src",
    "types": [],
    "downlevelIteration": true,
    "rootDirs": ["src"]
  },
  "exclude": ["node_modules", "src/lib/wordart/wasm", "src/data"],
  "include": [
    "src",
    "next-env.d.ts",
    "tools/generators/index.js",
    "next.config.js",
    "tools/generate-icons.js"
  ]
}
